#!/usr/bin/ruby
$:.unshift File.join(File.dirname(__FILE__), "..", "lib")
require "gems-status"

def echo_usage
  puts "usage: gem-status conf_file"
end 

if ARGV.length == 0 then
  echo_usage
  exit
end

if !File::exists?(ARGV[0]) then
  puts "ERROR: File does not exists: #{ARGV[1]}"
  echo_usage
  exit
end

conf_file = ARGV[0]
begin
  conf = YAML::load(File::open(conf_file))
rescue
  Utils::log_error("?", "There was a problem opening #{conf_file}")
end
GemsStatus::GemStatus.new(conf).execute

